{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "./",
        "noEmit": true
    },
    "include": ["api/**/*", "src/**/*"],
    "files": [],
    "references": [
        {
            "path": "packages/core"
        }
    ]
}
